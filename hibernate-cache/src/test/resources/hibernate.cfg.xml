<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <property name="connection.url">jdbc:h2:mem:test_db</property>
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.username">admin</property>
        <property name="connection.password">mysecretpassword</property>

        <property name="dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="hbm2ddl.auto">update</property>

        <!--        <property name="show_sql">true</property> &lt;!&ndash; Show SQL in console &ndash;&gt;-->
        <!--        <property name="format_sql">true</property> &lt;!&ndash; Show SQL formatted &ndash;&gt;-->

        <mapping class="com.authguard.dal.model.AccountTokenDO"/>
        <mapping class="com.authguard.dal.model.AccountLockDO"/>
        <mapping class="com.authguard.dal.model.SessionDO"/>
        <mapping class="com.authguard.dal.model.OneTimePasswordDO"/>

    </session-factory>
</hibernate-configuration>